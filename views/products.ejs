          <p class="text-base-content/70 mb-6">Fill this form to add a produc</p>
          
          <form method="post" action="/addProduct"  class="space-y-4">
            <div class="form-control w-full">
              <label class="label" for="first-name">
                <span class="label-text font-medium">Product name</span>
              </label>
              <input 
                type="text" 
                name="name" 
                id="first-name" 
                autocomplete="given-name" 
                class="input input-bordered w-full" 
                placeholder="Enter your first name"
                required
              />
            </div>

            <div class="form-control w-full">
              <label class="label" for="first-name">
                <span class="label-text font-medium">Product Description</span>
              </label>
              <input 
                type="text" 
                name="description" 
                id="first-name" 
                autocomplete="given-name" 
                class="input input-bordered w-full" 
                placeholder="Enter your first name"
                required
              />
            </div>

